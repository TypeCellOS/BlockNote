                  "text": "function main() {
  var email = 'your-email@example.com'; // Replace with your email
  var budgetLimit = 100; // Set your daily budget limit
  var account = AdsApp.currentAccount();
  var stats = account.getStatsFor('TODAY');
  var cost = stats.getCost();
  
  if (cost >= budgetLimit) {
    sendEmailAlert(email, cost);
  }
}

function sendEmailAlert(email, cost) {
  MailApp.sendEmail({
    to: email,
    subject: 'Daily Budget Alert',
    body: 'Your daily budget has been spent. Total cost: $' + cost.toFixed(2)
  });
