{
  "name": "@blocknote/shadcn",
  "homepage": "https://github.com/TypeCellOS/BlockNote",
  "private": false,
  "sideEffects": [
    "*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TypeCellOS/BlockNote.git",
    "directory": "packages/shadcn"
  },
  "license": "MPL-2.0",
  "version": "0.35.0",
  "files": [
    "dist",
    "types",
    "src"
  ],
  "keywords": [
    "react",
    "javascript",
    "editor",
    "typescript",
    "prosemirror",
    "wysiwyg",
    "rich-text-editor",
    "notion",
    "yjs",
    "block-based",
    "tiptap"
  ],
  "description": "A \"Notion-style\" block-based extensible text editor built on top of Prosemirror and Tiptap.",
  "type": "module",
  "source": "src/index.tsx",
  "types": "./types/src/index.d.ts",
  "main": "./dist/blocknote-shadcn.cjs",
  "module": "./dist/blocknote-shadcn.js",
  "exports": {
    ".": {
      "types": "./types/src/index.d.ts",
      "import": "./dist/blocknote-shadcn.js",
      "require": "./dist/blocknote-shadcn.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "style": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --max-warnings 0",
    "clean": "rimraf dist && rimraf types"
  },
  "dependencies": {
    "@blocknote/core": "catalog:prod",
    "@blocknote/react": "catalog:prod",
    "@hookform/resolvers": "catalog:prod",
    "@radix-ui/react-avatar": "catalog:prod",
    "@radix-ui/react-dropdown-menu": "catalog:prod",
    "@radix-ui/react-label": "catalog:prod",
    "@radix-ui/react-popover": "catalog:prod",
    "@radix-ui/react-select": "catalog:prod",
    "@radix-ui/react-slot": "catalog:prod",
    "@radix-ui/react-tabs": "catalog:prod",
    "@radix-ui/react-toggle": "catalog:prod",
    "@radix-ui/react-tooltip": "catalog:prod",
    "autoprefixer": "catalog:style",
    "class-variance-authority": "catalog:utils",
    "clsx": "catalog:utils",
    "lucide-react": "catalog:icons",
    "postcss": "catalog:style",
    "react-hook-form": "catalog:prod",
    "tailwind-merge": "catalog:style",
    "tailwindcss": "catalog:style",
    "tailwindcss-animate": "catalog:style",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@radix-ui/colors": "catalog:dev",
    "@types/node": "catalog:types",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types",
    "@vitejs/plugin-react": "catalog:build",
    "eslint": "catalog:lint",
    "react": "catalog:prod",
    "react-dom": "catalog:prod",
    "rimraf": "catalog:node",
    "rollup-plugin-webpack-stats": "catalog:build",
    "typescript": "catalog:dev",
    "vite": "catalog:build",
    "vite-plugin-eslint": "catalog:lint",
    "vite-plugin-externalize-deps": "catalog:build"
  },
  "peerDependencies": {
    "react": "^18.0 || ^19.0 || >= 19.0.0-rc",
    "react-dom": "^18.0 || ^19.0 || >= 19.0.0-rc"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.json"
    ]
  }
}
